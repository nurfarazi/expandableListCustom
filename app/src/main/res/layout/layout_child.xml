<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#5b5b5b">
	
	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/drug_name"
			android:layout_width = "wrap_content"
			android:gravity="left"
			android:layout_height="wrap_content"
			android:layout_marginStart="2dp"
			android:layout_marginEnd="8dp"
			android:paddingStart="?android:attr/expandableListPreferredChildIndicatorRight"
			android:paddingTop="10dp"
			android:paddingEnd="10dp"
			android:paddingBottom="10dp"
			android:text="drug_Title"
			android:textAlignment="center"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/drug_quantity"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:textColor="#fff"/>
	
	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/drug_quantity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="40dp"
			android:paddingStart="0dp"
			android:paddingTop="10dp"
			android:paddingEnd="10dp"
			android:paddingBottom="10dp"
			android:text="TextView"
			android:textColor="#fff"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/drug_amount"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.333" />
	
	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/drug_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="2dp"
			android:paddingStart="4dp"
			android:paddingTop="4dp"
			android:paddingEnd="4dp"
			android:paddingBottom="4dp"
			android:text="total_count"
			android:textColor="#fff"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.333" />
</androidx.constraintlayout.widget.ConstraintLayout>