<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>
	
	<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_title"
			android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
			android:paddingTop="10dp"
			android:paddingEnd="10dp"
			android:paddingBottom="10dp"
			android:text="title"
			android:layout_marginEnd="8dp" android:layout_marginStart="2dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/drug_count"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.411"
			app:layout_constraintVertical_bias="0.332"/>
	<androidx.appcompat.widget.AppCompatTextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/drug_count"
			android:paddingTop="10dp"
			android:paddingStart="0dp"
			android:paddingEnd="10dp"
			android:paddingBottom="10dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toStartOf="@+id/total_count"
			app:layout_constraintVertical_bias="0.332"/>
	<androidx.appcompat.widget.AppCompatTextView
			android:text="total_count"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/total_count"
			app:layout_constraintTop_toTopOf="parent"
			android:paddingTop="10dp"
			android:paddingStart="0dp"
			android:paddingEnd="10dp"
			android:paddingBottom="10dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintVertical_bias="0.332"
			android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/order_all_btn"/>
	<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/order_all_btn"
			android:background="@drawable/ic_check_circle_black_24dp"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:clickable="true"
			android:adjustViewBounds="true"
			android:layout_weight="1"
			android:scaleType="centerInside"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
	/>

</androidx.constraintlayout.widget.ConstraintLayout>